---
import PageLayout from '../layouts/PageLayout.astro';
import Button from '../components/Button.astro';
---

<PageLayout title="Page Not Found">
    <div class="container mx-auto px-4 py-32 text-center">
        <h1 class="text-9xl font-bold text-gray-200 dark:text-gray-800 mb-4">404</h1>
        <h2 class="text-3xl font-bold text-cast-iron dark:text-white mb-6">Recipe Not Found</h2>
        <p class="text-gray-600 dark:text-gray-400 mb-10 max-w-md mx-auto">
            It seems the page you are looking for has been burnt or doesn't exist.
        </p>
        <Button href="/">Return Home</Button>
    </div>
</PageLayout>
