---
interface Feature {
    icon: string;
    title: string;
    description: string;
}

interface Props {
    features: Feature[];
}

const { features } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {features.map(feature => (
        <div class="group p-6 rounded-2xl bg-white dark:bg-surface-card-dark border border-gray-100 dark:border-white/5 hover:border-gnome-blue/30 dark:hover:border-gnome-blue/30 transition-all duration-300 hover:shadow-xl hover:shadow-gnome-blue/5">
            <div class="w-12 h-12 rounded-xl bg-surface-light dark:bg-white/5 flex items-center justify-center mb-6 text-gnome-blue group-hover:scale-110 transition-transform duration-300">
                <i class={`ph-fill ${feature.icon} text-2xl`}></i>
            </div>
            <h3 class="text-xl font-bold mb-3 text-cast-iron dark:text-white group-hover:text-gnome-blue transition-colors">
                {feature.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                {feature.description}
            </p>
        </div>
    ))}
</div>
